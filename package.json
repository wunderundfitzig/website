{
  "name": "wundf-web",
  "version": "1.0.0",
  "description": "static website realized with way to complicated tools",
  "main": "app.js",
  "scripts": {
    "js": "browserify src/client.js -t babelify --extension=.jsx --debug | exorcist src/assets/js/bundle.js.map > src/assets/js/bundle.js",
    "css": "cd src/stylus; stylus < main.styl > ../assets/css/main.css",

    "build-production-server-code": "NODE_ENV=production; babel src --ignore assets --out-dir tmp",
    "build-production-client-bundle": "NODE_ENV=production; npm run js",

    "build": "(npm run build-production-server-code & npm run build-production-client-bundle) && npm run css && cp -r src/assets tmp/assets; cp package.json tmp/package.json",
    "deploy": "npm run build && rsync --archive --verbose --exclude-from '.deployignore' tmp/ wundf@wunderundfitzig.de:website; rm -r tmp",

    "watch-js": "nodemon --exec 'npm run js' --ext js,jsx --ignore src/assets/js/ -q",
    "watch-css": "nodemon --exec 'npm run css' -e styl --ignore src/assets/css/ -q",

    "serve-dev": "nodemon --exec 'babel-node src/server.js' --ext js,jsx --ignore src/assets/",
    "dev": "parallelshell 'npm run watch-js -s' 'npm run watch-css -s' 'npm run serve-dev -s'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wunderundfitzig/website.git"
  },
  "author": "Manuel Reich",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wunderundfitzig/website/issues"
  },
  "homepage": "https://github.com/wunderundfitzig/website#readme",
  "dependencies": {
    "classnames": "^2.2.5",
    "express": "^4.13.4",
    "history": "^4.4.1",
    "node-fetch": "^1.5.2",
    "path": "^0.12.7",
    "react": "^15.0.2",
    "react-addons-css-transition-group": "^15.0.2",
    "react-addons-transition-group": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-router": "^4.0.0-2",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "exorcist": "^0.4.0",
    "nodemon": "^1.9.2",
    "parallelshell": "^2.0.0",
    "stylus": "^0.54.5"
  }
}
