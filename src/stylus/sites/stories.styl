.stories-container
  height           100%
  position         relative
  overflow         hidden
  @media mobile
    background-color grey

.invalid
  transition transform 0.2s

.storie
  position   absolute
  float      left
  width      100%
  height     100%
  min-height 650px
  overflow   hidden
  transition transform 1.2s
  &.up
    transform translateY(-100%) !important
    @media mobile
      transform translateY(-200%) !important
  &.active
    transform translateY(0%)
  &.down
    transform translateY(100%) !important
    @media mobile
      transform translateY(200%) !important

  &.invalid-up
    @extend .invalid
    transform translateY(100px) !important
    @media mobile
      transform translateY(0) !important

  &.invalid-down
    @extend .invalid
    transform translateY(-100px) !important
    @media mobile
      transform translateY(0) !important

  @media all and (max-width: 1000px)
    transition transform 1s 0.1s
  @media mobile
    min-height 0
    height     60%
    overflow   visible

  .storie-title
    font-size   2em
    position    absolute
    color       #fff
    text-shadow 0 0 5px #000, 0 0 70px #000

  .arrow
    margin-top  150px
    width       40px
    height      300px
    display     block
    cursor      pointer
    background  url(../img/arrows.png) no-repeat right center
    direction   ltr
    text-indent -9999px
    &:hover
      border-bottom 0
    &.prev
      float left
    &.next
      background-position left
      float right
    @media mobile
      margin-top      60px
      width           20px
      height          150px
      background-size 40px

  .storie-text-wrapper
    position absolute
    top      560px
    left     0
    width    100%
    padding  0 page-padding
    @media mobile
      top     100%
      height  70%
      padding 0

    .storie-text
      display       block
      background    url(../img/bg.jpg) #fff
      border-radius 0
      box-shadow    0 0 5px -2px #000
      margin        0
      padding       20px 40px
      width         100%
      @media mobile
        font-size  1.2em
        padding    20px
        box-shadow none
        height     100%

  .storie-item
    position            absolute
    top                 0
    width               100%
    height              100%
    transition          transform 1.2s
    background-size     cover
    background-position center

    &.left
      transform translateX(-100%) !important
    &.active
      transform translateX(0%)
    &.right
      transform translateX(100%) !important

    &.invalid-left
      @extend .invalid
      transform translateX(100px) !important
      @media mobile
        transform translateX(0) !important


  .cover-image
    height  300px
    display block
    margin  200px auto
    @media mobile
      position relative
      top      25%
      height   50%
      margin   0 auto


.invalidSlide
  transition left 0.5s
  left       200px

.inner-storie
  @extends .inner-content
  position relative
  height   100%
