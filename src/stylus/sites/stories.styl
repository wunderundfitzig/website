#storiesPage

  .stories-overview
    list-style    none
    display       flex
    flex-wrap     wrap
    padding       0
    margin-top    50px
    margin-bottom 30px
    overflow      hidden

  .storie
    float         left
    width         (($page-width - 50px) / 3)
    margin-bottom 30px

    &:nth-child(3n - 1)
      margin 0 25px

  .storie-link
    border 0

    &:hover .storie-titel
      color $link-blue

  .storie-titel
    font-weight normal
    font-size   14px
    transition  color 0.5s
    margin      5px 0 0
    color       $wundf-black
    text-align  center

  .storie-img
    width 100%



  .story-page
    margin-left   calc(50% + 100px)
    min-height    calc(100vh - 270px)
    margin-bottom 60px

    @media $narrow
      margin-left calc(50% + 80px)
    @media $mobile
      margin-left   0
      margin-bottom 30px

  .story-image
    position         fixed
    top              0
    left             0
    bottom           0
    width            calc(50% + 55px)
    background-size  cover
    transition       opacity 1s
    background-color $light-grey

    @media $narrow
      width calc(50% + 35px)
    @media $mobile
      position  static
      display   block
      width     100%
      height    200px
    @media $small-mobile
      height 120px

    &.out-of-view
      opacity 0

      @media $mobile
        opacity 1

  .story-title
    margin 45px 0 25px

    @media $mobile
      margin 35px 0 15px

  .story-text
    line-height 1.7em
    max-width   500px
