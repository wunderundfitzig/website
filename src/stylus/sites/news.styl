//start page
.neugierig
  text-align  center
  font-size   4.5em
  font-weight 300
  margin-top  70px
  strong
    font-weight normal
    font-weight 600
  @media mobile
    margin-top 30px

.contact
  height     2.5em
  margin     30px auto 60px
  padding    20px 0
  border-top 1px dotted
  @media mobile
    padding-top   7px
    margin-bottom 25px
  .wrapper
    margin    0 auto
    width     30em
    max-width 100%
    p
      float          left
      width          9.6em
      margin         0 auto
      vertical-align top
      @media small-mobile
        width        auto
        margin-right 15px
        &:last-child
          margin-right 0

.news-feed
  width      100%
  max-width  inner-width
  margin     0 auto
  min-height 800px

  .loading
    display    inline-block
    margin-top 0
    animate(pulse 1s infinite)

  .load-200
    transition 10s

  //the post
  .fb-post
    margin-bottom 60px
    animate(fadeIn 3s)
    @media mobile
      margin-bottom 20px
    .fb-link
      display block
      &:hover
        border-bottom 0

  .fb-date
    font-size   1.2em
    font-weight 300
    margin      0 0 10px

  .photo
    .fb-picture
      width     100%
      max-width inner-width
      height    auto
  .link
    a
      background-color transparent-grey
      font-size        0
      line-height      0

  .fb-message
    margin-top 10px
    @media mobile
      margin-top 3px

.more-news-link
  border-top  1px dotted
  padding-top 20px
  margin-top  80px
  @media mobile
    margin-top  30px
    padding-top 10px

.impressum
  background-color #eee
  background-color transparent-grey
  position         absolute
  left             0
  margin-top       50px
  width            100%
  padding          10px 0
  font-size        0.7em
  color            #777
  text-align       center
  @media mobile
    margin-top 0
