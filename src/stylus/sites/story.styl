#storyPage
    margin-left   calc(50% + 100px)
    min-height    calc(100vh - 270px)
    margin-bottom 60px

    @media $narrow
      margin-left calc(50% + 80px)
    @media $mobile
      margin-left   0
      margin-bottom 30px

  .story-image
    position         fixed
    top              0
    left             0
    bottom           0
    width            calc(50% + 55px)
    background-size  cover
    transition       opacity 1s
    background-color $light-grey

    @media $narrow
      width calc(50% + 35px)
    @media $mobile
      position  static
      display   block
      width     100%
      height    200px
    @media $small-mobile
      height 120px

    &.out-of-view
      opacity 0

      @media $mobile
        opacity 1

  .story-title
    margin 45px 0 25px

    @media $mobile
      margin 35px 0 15px

  .story-text
    line-height 1.7em
    max-width   500px
