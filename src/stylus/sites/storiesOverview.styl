#storiesOverview
  position        relative
  list-style      none
  display         flex
  flex-flow       wrap
  padding         0
  margin-top      50px
  margin-bottom   30px
  overflow        hidden
  justify-content space-between
  @media $mobile
    margin-top 30px

  .story
    float         left
    width         calc((100% - 50px) / 3)
    margin-bottom 30px
    transition    top 0.3s, left 0.3s
    @media $mobile
      width calc((100% - 30px) / 2)

    @media $small-mobile
      width calc((100% - 15px) / 2)

  .story-link
    border 0

    &:hover .storie-titel
      color $link-blue

  .story-titel
    font-weight normal
    font-size   14px
    transition  color 0.5s
    margin      5px 0 0
    color       $wundf-black
    text-align  center

  .story-image-wrapper
    position         relative
    display          block
    width            100%
    background-color $light-grey

    &::before
      content     ' '
      display     block
      padding-top 135.2%

  .story-img
    position absolute
    top      0
    left     0
    width    100%
