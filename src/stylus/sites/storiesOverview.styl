#storiesOverview
  position        relative
  list-style      none
  display         flex
  flex-flow       wrap
  padding         0
  margin          50px 0 30px 0
  width           calc(100% + 25px)
  overflow        hidden
  @media $mobile
    margin-top 30px

  @media $small-mobile
    width calc(100% + 15px)

  .new-story
  .story
    float         left
    width         calc((100% - 3 * 25px) / 3)
    margin-bottom 30px
    margin-right  25px
    @media $mobile
      width calc((100% - 2 * 25px) / 2)

    @media $small-mobile
      margin-right 15px
      width calc((100% - 2 * 15px) / 2)

  .story-link
    border 0

    &:hover .storie-titel
      color $link-blue

    &.editMode
      cursor move

  .new-story-inner
  .story-image-wrapper
    position         relative
    display          block
    width            100%
    background-color $light-grey

    &::before
      content     ' '
      display     block
      padding-top 135.2%

  .new-story
    position relative
    cursor   pointer
    &::before
      position    absolute
      top         50%
      left        50%
      margin-left -33px
      margin-top  -95px
      content     '+'
      font-size   120px
      font-weight bold
      color       $button-grey
      z-index     10

  .new-story-inner
    border 0

  .story-img
    position absolute
    top      0
    left     0
    width    100%

  .edit-buttons
    position    absolute
    top         10px
    right       10px
    display     flex
    flex-flow   column
    align-items flex-end

    button
    label
      $button()
      font-size     13px
      padding       2px 8px
      margin-bottom 10px

    .delete-button
      background-color $red

  .slug-editor
    margin     0
    text-align right

  .slug-input
    $input()
    font-size 12px
    margin    0 5px 0 5px
    width     calc(100% - 50px)

  .sumbit-slug-button
    &:disabled
      opacity 0.5

  .file-selector
    display none

  .story-title
  .story-title-input
    font-weight normal
    font-size   14px
    transition  color 0.5s
    margin      5px 0 0
    color       $wundf-black
    text-align  center

  .story-title-input
    $input()
    display       block
    width         90%
    margin        2px auto -3px
