#storiesOverview
  position      relative
  list-style    none
  display       flex
  flex-wrap     wrap
  padding       0
  margin-top    50px
  margin-bottom 30px
  overflow      hidden
  @media $mobile
    margin-top 30px

  .story
    float         left
    width         calc((100% - 50px) / 3)
    margin-bottom 30px
    &.editMode
      position absolute
      margin   0 !important
      transition top 0.3s, left 0.3s

    &:nth-child(3n - 1)
      margin-left  25px
      margin-right 25px
      @media $mobile
       margin-left  0
       margin-right 0

    @media $mobile
      width calc((100% - 30px) / 2)

      &:nth-child(2n - 1)
        margin-right 30px
        @media $small-mobile
          margin-right 15px

    @media $small-mobile
      width calc((100% - 15px) / 2)

  .story-link
    border 0

    &:hover .storie-titel
      color $link-blue

  .story-titel
    font-weight normal
    font-size   14px
    transition  color 0.5s
    margin      5px 0 0
    color       $wundf-black
    text-align  center

  .story-image-wrapper
    position         relative
    display          block
    width            100%
    background-color $light-grey

    &::before
      content     ' '
      display     block
      padding-top 135.2%

  .story-img
    position absolute
    top      0
    left     0
    width    100%
