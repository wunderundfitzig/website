#creatives-page

  .creatives-section
    width         calc(50% - 110px)
    margin-bottom 140px

    @media $mobile
      width calc(50% - 80px)

    @media $small-mobile
      width         100%
      margin-bottom 30px

  .creatives-image
    position        fixed
    top             0
    right           0
    bottom          0
    width           calc(50% + 55px)
    background-size cover
    transition      opacity 1s

    @media $mobile
      width calc(50% + 35px)

    @media $small-mobile
      position  static
      display   block
      width     100%
      height    120px

    @media $small-mobile-wide
      height 200px

    &.out-of-view
      opacity 0

      @media $small-mobile
        opacity 1

  .creatives-section-title
    margin 45px 0 25px

    @media $small-mobile
      margin 35px 0 15px

  .creatives-paragraph
    line-height 1.7em
    max-width   500px
