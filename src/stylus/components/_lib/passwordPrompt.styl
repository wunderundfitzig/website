#password-promt
  position         fixed
  top              0
  left             0
  width            100%
  height           100%
  background-color rgba(0, 0, 0, 0.7)
  z-index          200

  .password-promt
    position         absolute
    top              30%
    left             50%
    margin-left      -150px
    width            300px
    padding          15px 20px
    background-color white
    box-shadow       0 0 5px -3px black
    border-radius    2px
    text-align       right

    label
      display       block
      text-align    left
      margin-bottom 10px

    input
      width         100%
      margin-bottom 12px

    button
      border           0
      background-color transparent
      padding          0
      font-size        12px
      font-family      'Noto Serif', serif
      margin-left      10px
      cursor           pointer

    .cancel-button
      color $red

    .submit-button
      color $link-blue
      &:disabled
        opacity 0.5
