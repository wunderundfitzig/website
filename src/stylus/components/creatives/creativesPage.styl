#creatives-page

  .creatives-section
    width         calc(50% - 110px)
    min-height    calc(100vh - 270px)
    margin-bottom 60px

    @media $narrow
      width calc(50% - 80px)
    @media $mobile
      width         100%
      margin-bottom 30px

  .creatives-image
    position         fixed
    top              $header-height
    right            0
    bottom           0
    width            calc(50% + 55px)
    background-size  cover
    transition       opacity 1s
    background-color $light-grey

    @media $narrow
      width calc(50% + 35px)
      top   $small-header-height
    @media $mobile
      position  static
      display   block
      width     100%
      height    200px
    @media $small-mobile
      height 120px

    &.out-of-view
      opacity 0

      @media $mobile
        opacity 1

  .creatives-section-title
    margin 45px 0 25px

    @media $mobile
      margin 35px 0 15px

  .creatives-text
    line-height 1.7em
    max-width   500px
