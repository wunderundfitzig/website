#stories-overview
  position        relative
  list-style      none
  display         flex
  flex-flow       wrap
  padding         0
  margin          50px 0 30px 0
  width           calc(100% + 25px)
  overflow        hidden
  @media $mobile
    margin-top 30px

  @media $small-mobile
    width calc(100% + 15px)

  .new-story
  .story
    float         left
    width         calc((100% - 3 * 25px) / 3)
    margin-bottom 30px
    margin-right  25px
    @media $mobile
      width calc((100% - 2 * 25px) / 2)

    @media $small-mobile
      margin-right 15px
      width calc((100% - 2 * 15px) / 2)

  .new-story-inner
    display          block
    width            100%
    background-color $light-grey
    border           0

    &::before
      content     ' '
      display     block
      padding-top 135.2%

  .new-story
    position relative
    cursor   pointer
    &::before
      position    absolute
      top         50%
      left        50%
      margin-left -33px
      margin-top  -95px
      content     '+'
      font-size   120px
      font-weight bold
      color       $button-grey
      z-index     10
