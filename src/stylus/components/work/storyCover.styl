#story-cover
  border 0

  &:hover .storie-titel
    color $link-blue

  &.editMode
    cursor move

  .story-image-wrapper
    position         relative
    display          block
    width            100%
    background-color $light-grey

    &::before
      content     ' '
      display     block
      padding-top 135.2%

  .story-img
    position absolute
    top      0
    left     0
    width    100%

  .edit-buttons
    position    absolute
    top         10px
    right       10px
    display     flex
    flex-flow   column
    align-items flex-end

    button
    label
      $button()
      font-size     13px
      padding       2px 8px
      margin-bottom 10px

    .delete-button
      background-color $red

  .file-selector
    display none

  .story-title
  .story-title-input
    font-weight normal
    font-size   16px
    max-height: 25px
    overflow:   hidden
    text-overflow: ellipsis
    transition  color 0.5s
    margin      0 0 15px 0
    font-weight bold
    color       $text-grey

  .story-title-input
    $input()
    display       block
    width         90%
    margin        -3px -6px 12px
