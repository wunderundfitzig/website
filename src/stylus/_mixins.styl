$title()
  font-weight bold
  color       $text-grey
  font-size   18px
  @media $mobile
    font-size 15px

$button(background-color = $button-grey, color = $background-grey)
  background-color background-color
  color            color
  font-family      'Noto Serif', serif
  text-align       center
  border           0
  border-radius    2px
  cursor           pointer

$input()
  font-family   'Noto Serif', serif
  border        1px solid $light-grey
  border-radius 2px
  padding       2px 5px
