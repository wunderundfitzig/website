.blackHeader
  position         fixed
  top              0
  left             0
  background-color $wundf-black
  height           $header-height
  width:           100%
  z-index          200

  &.edit-mode
    background-color $link-blue

    .topNavigation .active::after
      border-top 13px solid $link-blue
  @media $narrow
    height $small-header-height

.topNavigation
  max-width 660px
  margin    0 auto

  ul
    margin 0
    padding 0

  .menu-item
    display    table
    list-style none
    float      left
    width      33%
    height     100%
    padding    0
    margin     0

    a
      display        table-cell
      padding-top    5px
      height         100%
      color          white
      position       relative
      text-align     center
      vertical-align middle
      border         0

    .menu-img
      margin-top -16px
      height     21px

      @media $narrow
        height     16px
        margin-top -13px
      @media $small-mobile
        height     15px


    .menu-logo
      margin-left -13px
      @media $narrow
        height 35px
      @media $small-mobile
        height 33px

    .active
      &::after
        content        ' '
        position       absolute
        margin-left    -12px
        left           50%
        bottom         -13px
        width          0
        height         0
        border-left    12px solid transparent
        border-right   12px solid transparent
        border-top     13px solid $wundf-black
