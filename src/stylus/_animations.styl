//keyframe animations
@keyframes blurIn
  0%
    filter  blur(8px);
    opacity 0.1
  100%
    filter  blur(2px)
    opacity 1

@keyframes flip
  0%
    transform rotateX(0deg)
  50%
    transform rotateX(90deg)
  100%
    transform rotateX(0deg)

//react animations

.flip-enter
  transform  rotateX(90deg)
  transition transform .2s 1s ease-out
  @media mobile
    transition opacity .1s
    opacity 0

.flip-enter.flip-enter-active
  transform rotateX(0)
  @media mobile
    opacity    1


.flip-leave
  transform  rotateX(0)
  transition transform .2s .8s ease-in
  @media mobile
    transition opacity .1s .1s
    opacity    1

.flip-leave.flip-leave-active
  transform rotateX(90deg)
  @media mobile
    opacity 0
