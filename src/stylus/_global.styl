*
  box-sizing border-box

body
  color          $wundf-black
  font-size      16px
  background     #f5f5f5
  font-family    'Noto Serif', serif
  font-weight    400
  line-height    1.5em
  margin         0

  @media mobile
    font-size 12px

h1,
h2,
h3,
h3,
h5,
h6
  font-weight 300;

a
  color           $link-blue
  text-decoration none
  border-bottom   1px solid $link-blue


.content
  margin-top $header-height
  overflow   hidden

  @media $mobile
    padding-top $mobile-header-height

.inner-content
  margin     0 auto
  max-width  $page-width
  padding    0 40px

  @media $mobile
    padding 0 10px
